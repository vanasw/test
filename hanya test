	print
	print "Loading.."
	req = requests.get('https://time.siswadi.com/pray/'+kota)
	st = json.loads(req.content)
	dat = (st["data"])
	subuh = (dat["Fajr"])
	duhur = (dat["Dhuhr"])
	asar = (dat["Asr"])
	magrib = (dat["Maghrib"])
	isya = (dat["Isha"])
	
	os.system("clear")
