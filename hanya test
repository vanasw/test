
import requests
import json
import time
import sys
import os
import platform
from time import *
from sys import *
import random
from sys import stdout

W  = '\033[0m'  # white (default)
R  = '\033[1;31m' # red
G  = '\033[1;32m' # green bold
O  = '\033[1;33m' # orange
B  = '\033[1;34m' # blue
P  = '\033[1;35m' # purple
C  = '\033[1;36m' # cyan
GR = '\033[1;37m' # gray


def oi(s):
	for i in s + '\n' :
		stdout.write(i)
		stdout.flush()
		sleep(0.03)

def li(x):
	for i in x + '\n' :
		stdout.write(i)
		stdout.flush()
		sleep(0.20)

oi(G+''' ____                           _ _
